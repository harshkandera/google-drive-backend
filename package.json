{
  "name": "google-drive-backend",
  "version": "1.0.0",
  "description": "Backend API for Google Drive clone with authentication and file management",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit"
